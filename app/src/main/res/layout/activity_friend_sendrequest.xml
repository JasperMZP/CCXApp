<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appback2"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/add_friend_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/noheadimage"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/add_friend_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10.0dip"
            android:layout_marginTop="35dp"
            android:padding="12sp"
            android:textSize="20sp"
            android:text="用户名"/>

    </LinearLayout>


    <EditText
        android:id="@+id/add_friend_reason"
        android:layout_width="330dp"
        android:layout_height="60.0dip"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:layout_weight="0.04"
        android:ems="10"
        android:hint="编辑添加理由"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/word"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_alignStart="@+id/grass"
        android:layout_below="@+id/add_friend_reason"
        android:autoLink="all"
        android:padding="8sp"
        android:text=" 发送验证申请，等待对方通过"
        android:textSize="18sp" />


    <Button
        android:id="@+id/btn_send_request_to_add"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/word"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:text="发送添加好友请求"
        android:textColor="@color/white" />

</LinearLayout>