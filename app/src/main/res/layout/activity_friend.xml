<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"     android:background="@drawable/app_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

	<View
		android:layout_width="match_parent"
		android:layout_height="1.0dip"
		android:layout_marginTop="8dp"
		android:background="#CCCCCC" />
	<LinearLayout
		android:layout_marginLeft="5dp"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		>
	<ImageView
		android:id="@+id/image_to_new_friend_iv"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:src="@drawable/ic_addfriend"
		android:layout_gravity="center"
		android:clickable="true"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=" 好友申请"
		android:id="@+id/to_new_friend_tv"
		android:layout_marginLeft="5dp"
		android:layout_gravity="center"
		android:textColor="#666666"
		android:textSize="16sp"
		android:clickable="true"/>
	</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC" />
	<LinearLayout
		android:layout_marginLeft="5dp"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:clickable="true">
		<ImageView
			android:id="@+id/to_group_iv"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:src="@drawable/ic_chat1"
			android:layout_gravity="center"/>
		<TextView
			android:id="@+id/to_my_chat_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" 我的群组"
			android:layout_marginLeft="5dp"
			android:layout_gravity="center"
			android:textColor="#666666"
			android:textSize="16sp"/>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="15dip"
		android:background="#e1e5ea" />
	<LinearLayout
		android:id="@+id/fragment_container_FriendActivity"
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="1"
		android:orientation="vertical">

	</LinearLayout>
</LinearLayout>