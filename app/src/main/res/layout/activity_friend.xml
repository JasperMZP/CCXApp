<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"     android:background="@drawable/appback2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

	<android.support.v7.widget.Toolbar
	android:id="@+id/toolbar"
	android:layout_width="match_parent"
	android:layout_height="5dp"
	app:popupTheme="@style/AppTheme.PopupOverlay" />
	<View
		android:layout_width="match_parent"
		android:layout_height="1.0dip"
		android:layout_marginTop="8dp"
		android:background="#CCCCCC" />
	<LinearLayout
		android:layout_marginLeft="5dp"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		>
	<ImageView
		android:id="@+id/image_to_new_friend_iv"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:src="@drawable/addf"
		android:layout_gravity="center"
		android:clickable="true"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=" 好友申请"
		android:id="@+id/to_new_friend_tv"
		android:layout_marginLeft="5dp"
		android:layout_gravity="center"
		android:textColor="#666666"
		android:textSize="16sp"
		android:clickable="true"/>
	</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC" />
	<LinearLayout
		android:layout_marginLeft="5dp"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:clickable="true">
		<ImageView
			android:id="@+id/to_group_iv"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:src="@drawable/chat1"
			android:layout_gravity="center"/>
		<TextView
			android:id="@+id/to_my_chat_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=" 我的群组"
			android:layout_marginLeft="5dp"
			android:layout_gravity="center"
			android:textColor="#666666"
			android:textSize="16sp"/>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="15dip"
		android:background="#e1e5ea" />

	<LinearLayout
		android:id="@+id/showFriendsAll_lt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:orientation="vertical">

		<TabHost
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<TabWidget
					android:id="@android:id/tabs"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />

				<FrameLayout
					android:id="@android:id/tabcontent"
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<LinearLayout
						android:id="@+id/tab1"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical">

					</LinearLayout>

					<LinearLayout
						android:id="@+id/tab2"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical">

					</LinearLayout>

				</FrameLayout>
			</LinearLayout>
		</TabHost>

		<TextView
            android:layout_width="match_parent"
            android:layout_height="30.0dip"
            android:clickable="true"
            android:text="老人"
            android:drawablePadding="1.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="15.0dip"
            android:paddingRight="10.0dip"
            android:textColor="#666666"
            android:textSize="22sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:background="#e1e5ea" />

        <ListView
            android:id="@+id/all_friend_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"></ListView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/showYoingFriendsAll_lt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30.0dip"
            android:clickable="true"
            android:text="朋友"
            android:drawablePadding="1.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="15.0dip"
            android:paddingRight="10.0dip"
            android:textColor="#666666"
            android:textSize="22sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:background="#e1e5ea" />

        <ListView
            android:id="@+id/all_young_friend_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"></ListView>

	</LinearLayout>
</LinearLayout>