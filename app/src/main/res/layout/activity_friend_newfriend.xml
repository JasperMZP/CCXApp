<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:id="@+id/showNewFriendsAll_lt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/app_bg"
        android:radius="10dp">

    <ImageView
        android:id="@+id/grass_iv"
        android:layout_width="40dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:alpha="1"
        android:src="@mipmap/ic_grass" />

    <EditText
        android:id="@+id/name_need_search_et"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:digits="0123456789"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/grass_iv"
        android:layout_marginTop="27dp"
        android:background="@drawable/shape"
        android:hint="请输入用户名"

        android:padding="10px"
        android:textAlignment="center"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/search_new_friend_iv"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:alpha="0.6"
        android:src="@mipmap/search1"
        android:layout_below="@+id/grass_iv"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/search_new_friend_tv"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:padding="20sp"
        android:autoLink="all"
        android:textSize="13sp"
        android:textColor="#666666"

        android:textAlignment="center"
        android:layout_below="@+id/name_need_search_et"
        android:layout_alignParentStart="true" />


        <View
            android:id="@+id/a_line"
            android:layout_below="@+id/search_new_friend_tv"
            android:layout_width="match_parent"
            android:layout_height="2.0dip"
            android:background="#CCCCCC"
            android:visibility="gone"/>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:id="@+id/all_new_friend"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/a_line"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/a_friend_image_iv"
            android:layout_marginTop="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/a_friend_name_tv"
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:drawablePadding="10.0dip"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#666666"
            android:textSize="16.0sp"
            android:focusable="false"
            android:text="d那次u是NV"
            android:focusableInTouchMode="false"
            android:textIsSelectable="false" />
    </LinearLayout>

</RelativeLayout>
