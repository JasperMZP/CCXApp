<?xml version="1.0" encoding="UTF-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/appback2"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/add_message_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="17dp"
                android:text="用户名"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/message_userName"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingTop="17dp"
                android:layout_marginLeft="40dp"
                android:background="@null" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingTop="17dp"
                android:text="昵称"
                android:textAlignment="center"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/message_nickname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="57dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:background="#CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_sex2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingTop="16.5dp"
                android:text="性别"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/message_sex"
                android:layout_width="match_parent"
                android:paddingTop="17dp"
                android:layout_marginStart="57dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:background="#CCCCCC" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_birthday2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="17dp"
                android:text="生日"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/showBirthday"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="57dp"
                android:background="@android:color/transparent"
                android:text="1991-01-01"
                android:textColor="#8B7D7b"
                android:textSize="16dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:background="#CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_address2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="17dp"
                android:text="地区"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/message_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="57dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:background="#CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="个性签名"
                android:paddingTop="17dp"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/message_explain"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="23dp"
                android:background="@null" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dip"
            android:background="#CCCCCC" />
    </LinearLayout>
</ScrollView>