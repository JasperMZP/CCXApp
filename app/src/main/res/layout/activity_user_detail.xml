<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appback2"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_message_image_civ"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="17dp"
            android:text="用户名"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/message_userName_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:background="@null"
            android:paddingTop="17dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#CCCCCC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingTop="17dp"
            android:text="昵称"
            android:textAlignment="center"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/message_nickname_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="57dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_sex2_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingTop="16.5dp"
            android:text="性别"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/message_sex_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="57dp"
            android:paddingTop="17dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_birthday2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="17dp"
            android:text="生日"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/show_birthday_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="57dp"
            android:background="@android:color/transparent"
            android:text="1991-01-01"
            android:textColor="#8B7D7b"
            android:textSize="16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_address2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="17dp"
            android:text="地区"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/message_address_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="57dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingTop="17dp"
            android:text="个性签名"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/message_explain_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="23dp"
            android:background="@null" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="#CCCCCC" />
</LinearLayout>