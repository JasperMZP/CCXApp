<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/biz_news_local_weather_bg_big"
    android:layout_height="fill_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">
    <ImageView
        android:id="@+id/profile_image"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:src="@drawable/loginout"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/myName"
        android:layout_height="28.0dip"
        android:layout_width="match_parent"
        android:paddingLeft="15.0dip"
        android:textSize="14.0sp"
        android:textColor="@color/white"
        android:text="未登录"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvMyFavorite"
        android:layout_height="50.0dip"
        android:layout_width="match_parent"
        android:paddingLeft="15.0dip"
        android:textSize="16.0sp"
        android:textColor="@color/white"
        android:text="好友列表"
        android:gravity="center_vertical"
        android:paddingRight="10.0dip"
        android:drawablePadding="1.0dip"
        android:clickable="true"/>
    <View
        android:background="@drawable/biz_pc_account_line"
        android:layout_height="2.0dip"
        android:layout_width="match_parent"/>
    <TextView
        android:id="@+id/tvMyFriend"
        android:layout_height="50.0dip"
        android:layout_width="match_parent"
        android:paddingLeft="15.0dip"
        android:textSize="16.0sp"
        android:textColor="@color/white"
        android:text="为老人注册"
        android:gravity="center_vertical"
        android:paddingRight="10.0dip"
        android:drawablePadding="1.0dip"
        android:clickable="true"/>
    <View
        android:background="@drawable/biz_pc_account_line"
        android:layout_height="2.0dip"
        android:layout_width="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/settings"
            android:paddingLeft="5.0dip"
            android:layout_marginTop="5dp"
            />
        <TextView
        android:id="@+id/tvRing"
        android:layout_height="50.0dip"
        android:layout_width="match_parent"
        android:paddingLeft="5.0dip"
        android:textSize="16.0sp"
        android:textColor="@color/white"
        android:text="设置"
        android:gravity="center_vertical"
        android:paddingRight="10.0dip"
        android:drawablePadding="1.0dip"
        /></LinearLayout>

    <View
        android:background="@drawable/biz_pc_account_line"
        android:layout_height="2.0dip"
        android:layout_width="match_parent"/>
</LinearLayout>
