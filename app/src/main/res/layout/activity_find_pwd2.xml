<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context="com.example.jasper.ccxapp.ui.FindPwd2Activity">

    <TextView
        android:id="@+id/Q1_tv"
        android:layout_marginLeft="5dp"
        android:textColor="#2c3474"
        android:layout_marginTop="21dp"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        />
    <EditText
        android:id="@+id/A1_et"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:background="#f5f2f2"
        android:layout_height="80dp"
        android:layout_below="@+id/Q1_tv"
        />
    <TextView
        android:id="@+id/Q2_tv"
        android:layout_marginLeft="5dp"
        android:textColor="#2c3474"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_above="@+id/A2_et"
        android:layout_alignStart="@+id/A2_et" />
    <EditText
        android:id="@+id/A2_et"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:background="#f5f2f2"
        android:layout_height="80dp"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/find_pwd_phone_OK_btn"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/find_pwd_phone_OK_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_color"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="确定"
        android:layout_above="@+id/find_pwd_phone_cancel_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp" />
    <Button
        android:id="@+id/find_pwd_phone_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_color"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="取消"
        android:layout_marginBottom="14dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
