<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/appback2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/logo_iv"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:src="@drawable/logo1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/accountLayout_lt"
        android:layout_below="@+id/logo_iv"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/act_iv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logup_1"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/sing_up_userName_et"
            android:digits="0123456789"
            android:hint="请输入手机号码"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/psdLayout_lt"
        android:layout_below="@+id/accountLayout_lt">

        <ImageView
            android:id="@+id/psd_iv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logup_2"
            android:layout_weight="1" />


        <EditText
            android:id="@+id/sing_up_password_et"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyz"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/repsdLayout"
        android:layout_below="@+id/psdLayout_lt">

        <ImageView
            android:id="@+id/repsd_iv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/logup_2"
            android:layout_marginTop="5dp"
            android:layout_weight="1" />


        <EditText
            android:id="@+id/sing_up_password2_et"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyz"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5" />

    </LinearLayout>

    <Button
        android:id="@+id/sign_up_btn"
        android:onClick="sign up"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/button_color"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repsdLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/below"
        android:text="                    已有账号？"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp" />

    <TextView
        android:id="@+id/to_login_tv"
        android:onClick="login in"
        android:text="登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="#B452CD"
        android:layout_marginStart="13dp"
        android:layout_alignBottom="@+id/below"
        android:layout_toEndOf="@+id/below" />
</RelativeLayout>







