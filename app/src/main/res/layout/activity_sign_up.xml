<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/appback"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:id="@+id/titleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="注册"
            android:textColor="#C2C2C2"
            android:textSize="40sp" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:src="@drawable/logo"
        android:layout_below="@+id/titleLayout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/accountLayout"
        android:layout_below="@+id/logo"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/act"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logup_1"
            android:layout_weight="1" />


        <EditText
            android:inputType="number"
            android:hint="请输入账号"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/psdLayout"
        android:layout_below="@+id/accountLayout">

        <ImageView
            android:id="@+id/psd"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logup_2"
            android:layout_weight="1" />


        <EditText
            android:inputType="number"
            android:hint="请输入密码"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/repsdLayout"
        android:layout_below="@+id/psdLayout">

        <ImageView
            android:id="@+id/repsd"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@drawable/logup_2"
            android:layout_marginTop="5dp"
            android:layout_weight="1" />


        <EditText
            android:inputType="number"
            android:hint="请确认密码"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5" />

    </LinearLayout>

    <Button
        android:id="@+id/signup"
        android:onClick="sign up"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/button"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repsdLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/below"
        android:text="                    已有账号？"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp" />

    <TextView
        android:id="@+id/loginin"
        android:onClick="login in"
        android:text="登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="#B452CD"
        android:layout_marginStart="13dp"
        android:layout_alignBottom="@+id/below"
        android:layout_toEndOf="@+id/below" />
</RelativeLayout>







