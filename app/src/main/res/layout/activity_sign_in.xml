<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/appback2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:src="@drawable/logo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/accountLayout"
        android:layout_below="@+id/logo">

        <ImageView
            android:id="@+id/act"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logup_1"
            android:layout_weight="1" />



        <EditText
            android:id="@+id/login_username"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyz"
            android:hint="请输入用户名"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/psdLayout"
        android:layout_below="@+id/accountLayout">

        <ImageView
            android:id="@+id/psd"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/logup_2"
            android:layout_weight="1" />



        <EditText
            android:id="@+id/login_password"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyz"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_sign_in"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/button"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/psdLayout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/tagLayout"
        android:layout_below="@+id/btn_sign_in">

        <CheckBox
            android:id="@+id/check"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:text="记住密码"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/below"
            android:text="    忘记密码？"
            android:textColor="#B452CD"
            android:textSize="15sp"
            android:layout_width="0px"
            android:layout_height="40dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lastLayout"
        android:layout_below="@+id/tagLayout"
        android:layout_alignParentStart="true">

        <TextView
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="                        还没有账号？"
            android:id="@+id/text" />

        <TextView
            android:clickable="true"
            android:id="@+id/btn_sign_up"
            android:textSize="15sp"
            android:text="注册"
            android:layout_width="wrap_content"
            android:textColor="#B452CD"
            android:layout_marginStart="13dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>